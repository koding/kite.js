{
  "extends": "standard",
  "env": {
    "es6": true,
    "jest": true,
    "node": true
  },
  "globals": {
    "GENTLY": true
  },
  "rules": {
    "no-multi-spaces": 0,
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "space-before-function-paren": [
      "error",
      "never"
    ]
  }
}
